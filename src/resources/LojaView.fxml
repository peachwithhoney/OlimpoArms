<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.LojaController" spacing="10" alignment="CENTER" padding="20" 
      stylesheets="@/styles.css"> 
    
    
    <Label text="Loja de Armamentos para Semideuses" />

    
    <HBox spacing="10">
        <Label text="ID do Semideus:" />
        <TextField fx:id="txtIdSemideus" />
    </HBox>

    
    <Button fx:id="btnListarProdutos" text="Listar Produtos DisponÃ­veis" onAction="#listarProdutos" />

    
    <Label text="Selecione o Produto:" />
    <ComboBox fx:id="comboProdutos" prefWidth="200" />

    
    <HBox spacing="10">
        <Label text="Quantidade:" />
        <TextField fx:id="txtQuantidade" prefWidth="50" />
    </HBox>

    
    <Button fx:id="btnComprar" text="Comprar" onAction="#realizarCompra" />

    
    <Label fx:id="lblStatus" text="" />

    
    <TextArea fx:id="areaInformacoes" editable="false" prefHeight="200" prefWidth="300" />
</VBox>
